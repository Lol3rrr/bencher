---
import QueryParametersInner from "./QueryParametersInner.astro";

interface Props {
  parameters: Array<object>;
}

const { parameters } = Astro.props;

const isEmpty = parameters ? parameters.reduce((acc, param) => acc && param.in !== "query", true) : true;
---

{!isEmpty && (
  <h3 class="title is-5">Query Parameters</h3>
  <QueryParametersInner parameters={parameters} />
)}
