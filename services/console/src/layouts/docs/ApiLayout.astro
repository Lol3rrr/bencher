---
import InnerLayout from "./InnerLayout.astro";
import { DocsTab } from "../../components/docs/docs_tab";
import type Collection from "../../util/collection";
import { BENCHER_SITE_URL } from "../../util/ext";
import { collectionPath } from "../../util/collection";

interface Props {
  title: string;
  titleFmt?: undefined | ((title: string) => string);
  description: string;
  heading?: string;
  lang?: string;
  collection: Collection;
  slug?: undefined | string;
}

const { title, titleFmt, description, heading, lang, collection, slug } = Astro.props;
---

<InnerLayout
  title={title}
  titleFmt={titleFmt ?? ((title) => `🧑‍💻 ${heading ?? title}`)}
  description={description}
  heading={heading}
  tab={DocsTab.Api}
  collection={collection}
  slug={slug}
  lang={lang}
  canonical={`${BENCHER_SITE_URL}/docs/api/${collectionPath(collection)}/${slug}/`}
>
  <slot />
</InnerLayout>
