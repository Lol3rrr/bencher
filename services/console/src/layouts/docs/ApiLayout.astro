---
import DocsLayout from "./DocsLayout.astro";
import { DocsTab } from "../../components/docs/docs_tab";

interface Props {
  title: string;
  titleFmt?: undefined | ((title: string) => string);
  description: string;
  heading?: string;
  collection?: undefined | string;
  slug?: undefined | string;
}

const { title, titleFmt, description, heading, collection, slug } = Astro.props;
---

<DocsLayout
  title={title}
  titleFmt={titleFmt ?? ((title) => `🧑‍💻 ${heading ?? title}`)}
  description={description}
  heading={heading}
  tab={DocsTab.Api}
  collection={collection}
  slug={slug}
>
  <slot />
</DocsLayout>
