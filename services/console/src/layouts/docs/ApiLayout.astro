---
import InnerLayout from "./InnerLayout.astro";
import { DocsTab } from "../../components/docs/docs_tab";
import type Collection from "../../util/collection";
import { BENCHER_SITE_URL } from "../../util/ext";
import { collectionPath } from "../../util/collection";

interface Props {
  title: string;
  titleFmt?: undefined | ((title: string) => string);
  description: string;
  heading?: string;
  lang?: string;
  collection?: Collection;
  slug?: undefined | string;
}

const { title, titleFmt, description, heading, lang, collection, slug } = Astro.props;

const canonical = () => {
  if (collection && slug) {
    return `${BENCHER_SITE_URL}/docs/api/${collectionPath(collection)}/${slug}/`;
  } else if (collection) {
    return `${BENCHER_SITE_URL}/docs/api/${collectionPath(collection)}/`;
  } else if (slug) {
    return `${BENCHER_SITE_URL}/docs/api/${slug}/`;
  } else {
    return `${BENCHER_SITE_URL}/docs/api/`;
  }
};
---

<InnerLayout
  title={title}
  titleFmt={titleFmt ?? ((title) => `🧑‍💻 ${heading ?? title}`)}
  description={description}
  heading={heading}
  tab={DocsTab.Api}
  collection={collection}
  slug={slug}
  lang={lang}
  canonical={canonical()}
>
  <slot />
</InnerLayout>
