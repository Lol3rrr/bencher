---
import BaseLayout from "../BaseLayout.astro";
import AuthNavbar from "../../components/navbar/AuthNavbar";

interface Props {
  title: string;
  titleFmt?: (title: string) => string;
  description: string;
  published?: undefined | string;
  modified?: undefined | string;
  canonical?: undefined | string;
}

const { title, titleFmt, description, published, modified, canonical } = Astro.props;
---

<BaseLayout title={title} titleFmt={titleFmt} description={description} published={published} modified={modified} canonical={canonical ?? Astro.url.pathname}>
  <!-- Note that the AuthNavbar does *not* fill the slot `navbar`. It is a client-side override.  -->
  <AuthNavbar client:only="solid-js" />
  <slot />
</BaseLayout>
