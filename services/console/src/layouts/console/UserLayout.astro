---
import ConsoleLayout from "./ConsoleLayout.astro";
import UserMenu from "../../components/console/menu/UserMenu";
import type { Params } from "astro";

interface Props {
	apiUrl: string;
	params: Params;
	title: string;
}

const { apiUrl, params, title } = Astro.props;
---

<ConsoleLayout apiUrl={apiUrl} params={params} title={title}>
  <UserMenu client:only="solid-js" slot="menu" />
  <slot />
</ConsoleLayout>
