---
import ConsoleLayout from "./ConsoleLayout.astro";
import OrgMenu from "../../components/console/menu/OrgMenu";
import type { Params } from "astro";

interface Props {
	apiUrl: string;
	params: Params;
	title: string;
	suppressNotification?: boolean;
}

const { apiUrl, params, title, suppressNotification } = Astro.props;
---

<ConsoleLayout
  apiUrl={apiUrl}
  params={params}
  title={title}
  suppressNotification={suppressNotification}
>
  <OrgMenu client:only="solid-js" slot="menu" apiUrl={apiUrl} params={params} />
  <slot />
</ConsoleLayout>
